@model IEnumerable<Ticket>
@{
    ViewData["Title"] = "Tickets";
}

<h2>Tickets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Name</td>
                <td>@ticket.Description</td>
                <td>@ticket.Status</td>
                <td>@ticket.DueDate.ToShortDateString()</td>
                <td>
                    @if (ticket.Status != "Completed")
                    {
                        <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="MarkCompleted" asp-route-id="@ticket.Id" class="btn btn-warning">Mark Completed</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add Ticket</a>