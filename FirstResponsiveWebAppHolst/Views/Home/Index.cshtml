@{
    ViewBag.Title = "Home";
}
@model FirstResponsiveWebAppHolst.Models.AgeCalculatorModel
<!DOCTYPE html>

<html>
<head>
    
</head>
<body>
    <div class="container">
    <h1> Age Calculator</h1>
    <form asp-action="Index" method="post">
       
        <div class="form-group row mb-3">
            <label asp-for="Name" class="col-sm-2 col-form-label"> Name: </label>
                <div class="col-sm-10 col-12  d-flex flex-column flex-sm-row">
                <input asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="BirthYear" class="col-sm-2 col-form-label">Birth Year: </label>
                <div class="col-sm-10 col-12  d-flex flex-column flex-sm-row">
            <input asp-for="BirthYear"/>
             <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label"> Name and Age: </label>
                <div class="col-sm-10  d-flex flex-column flex-sm-row">
                    <input value="@ViewBag.Name @ViewBag.Age" readonly />
            </div>
            
        </div>

            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-2 d-flex flex-column flex-sm-row">
                    <button type="submit" class="btn btn-primary mb-2 mb-sm-0 mr-sm-2">Get Age</button>
                    <button type="button" class="btn btn-secondary">
                        <a asp-action="Index" class="text-decoration-none text-reset">Clear</a>
                    </button>
                </div>
            </div>
    </form>
    </div>
</body>
</html>

